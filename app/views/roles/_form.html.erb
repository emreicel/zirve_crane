<%= form_with(model: @role, local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :name, 'Rol Adı', class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  
    <div class="mb-3">
      <%= f.label :description, 'Açıklama', class: 'form-label' %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
  
    <%= f.submit 'Kaydet', class: 'btn btn-primary' %>
    <%= link_to 'İptal', roles_path, class: 'btn btn-secondary' %>
  <% end %>
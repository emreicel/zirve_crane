<h1>Firma Listesi</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Firma İsmi</th>
      <th>Adres</th>
      <th>Telefon</th>
      <th>Vergi Dairesi</th>
      <th>Yetkili Kişi</th>
      <th>Yetkili Email</th>
      <th>Yetkili Telefon</th>
      <th>İşlemler</th>
    </tr>
  </thead>
  <tbody>
    <% @crane_owners.each do |crane_owner| %>
      <tr>
        <td><%= crane_owner.crane_owner_name %></td>
        <td><%= crane_owner.crane_owner_address %></td>
        <td><%= crane_owner.crane_owner_phone %></td>
        <td><%= crane_owner.crane_owner_vat_office %></td>
        <td><%= crane_owner.crane_owner_contact %></td>
        <td><%= crane_owner.crane_owner_contact_email %></td>
        <td><%= crane_owner.crane_owner_contact_phone %></td>
        <td>
          <%= link_to 'Düzenle', edit_crane_owner_path(crane_owner), class: "btn btn-sm btn-warning" %>
          <%= button_to 'Sil', crane_owner, method: :delete, data: { confirm: 'Bu firmayı silmek istediğinizden emin misiniz?' }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Yeni Firma Ekle', new_crane_owner_path, class: "btn btn-primary mt-3" %>

<h1>Müşteri Bilgilerini Düzenle</h1>

<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h5 class="card-title">Müşteri Bilgileri</h5>
    </div>
    <div class="card-body">
      <%= form_with model: @customer, local: true do |f| %>
        <div class="mb-3 row">
          <div class="col-md-6">
            <%= f.label :customer_name, "Müşteri Adı", class: "form-label" %>
            <%= f.text_field :customer_name, class: "form-control", required: true %>
          </div>
          <div class="col-md-6">
            <%= f.label :email, "E-posta" %>
            <%= f.email_field :email, class: "form-control" %>
          </div>
          <div class="col-md-6">
            <%= f.label :vat_office_name, "Vergi Dairesi", class: "form-label" %>
            <%= f.text_field :vat_office_name, class: "form-control" %>
          </div>
        </div>

        <div class="mb-3 row">
          <div class="col-md-6">
            <%= f.label :customer_address, "Müşteri Adresi", class: "form-label" %>
            <%= f.text_area :customer_address, class: "form-control", rows: 3 %>
          </div>
          <div class="col-md-6">
            <%= f.label :customer_phone_number, "Müşteri Numarası", class: "form-label" %>
            <%= f.telephone_field :customer_phone_number, class: "form-control" %>
          </div>
        </div>

        <div class="mb-3">
          <%= f.submit "Güncelle", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

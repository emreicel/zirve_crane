<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-header bg-light py-3">
      <div class="d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
          <i class="fas fa-user-plus me-2"></i>Yeni Müşteri Ekle
        </h5>
        <%= link_to customers_path, class: "btn btn-sm btn-outline-secondary" do %>
          <i class="fas fa-arrow-left me-1"></i>Geri
        <% end %>
      </div>
    </div>

    <div class="card-body">
      <%= form_with model: @customer, local: true, class: "needs-validation" do |f| %>
        <div class="row g-4">
          <!-- Temel Bilgiler -->
          <div class="col-md-6">
            <div class="form-floating mb-3">
              <%= f.text_field :customer_name,
                  class: "form-control",
                  required: true,
                  placeholder: "Firma Adı",
                  autofocus: true %>
              <%= f.label :customer_name do %>
                <i class="fas fa-user me-1"></i>Firma Adı
              <% end %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-floating mb-3">
              <%= f.text_field :vat_office_name,
                  class: "form-control",
                  placeholder: "Vergi Dairesi" %>
              <%= f.label :vat_office_name do %>
                <i class="fas fa-building me-1"></i>Vergi Dairesi
              <% end %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-floating mb-3">
              <%= f.telephone_field :customer_phone_number,
                  class: "form-control",
                  placeholder: "5XX XXX XX XX",
                  pattern: "[0-9]{10}",
                  title: "Lütfen geçerli bir telefon numarası girin (5XX XXX XX XX)" %>
              <%= f.label :customer_phone_number do %>
                <i class="fas fa-phone me-1"></i>Telefon Numarası
              <% end %>
              <div class="form-text">Örnek: 5XX XXX XX XX</div>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-floating mb-3">
              <%= f.text_area :customer_address,
                  class: "form-control",
                  style: "height: 100px",
                  placeholder: "Adres" %>
              <%= f.label :customer_address do %>
                <i class="fas fa-map-marker-alt me-1"></i>Adres
              <% end %>
            </div>
          </div>

          <!-- Yetkili Kişi Bilgileri -->
          <div class="col-12">
            <hr class="text-muted">
            <h6 class="text-muted mb-3">
              <i class="fas fa-address-card me-2"></i>Yetkili Kişi Bilgileri
            </h6>
          </div>

          <div class="col-md-6">
            <div class="form-floating mb-3">
              <%= f.text_field :contact_person_name,
                  class: "form-control",
                  placeholder: "Yetkili Kişi Adı" %>
              <%= f.label :contact_person_name do %>
                <i class="fas fa-user-tie me-1"></i>Adı
              <% end %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-floating mb-3">
              <%= f.email_field :contact_person_email,
                  class: "form-control",
                  placeholder: "E-posta Adresi" %>
              <%= f.label :contact_person_email do %>
                <i class="fas fa-envelope me-1"></i>E-posta
              <% end %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-floating mb-3">
              <%= f.telephone_field :contact_person_phone,
                  class: "form-control",
                  placeholder: "5XX XXX XX XX",
                  pattern: "[0-9]{10}",
                  title: "Lütfen geçerli bir telefon numarası girin (5XX XXX XX XX)" %>
              <%= f.label :contact_person_phone do %>
                <i class="fas fa-phone me-1"></i>Telefon Numarası
              <% end %>
              <div class="form-text">Örnek: 5XX XXX XX XX</div>
            </div>
          </div>

          

          
          <!-- Form Butonları -->
          <div class="col-12 mt-4">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <%= link_to customers_path, class: "btn btn-outline-secondary me-2" do %>
                <i class="fas fa-times me-1"></i>İptal
              <% end %>
              <%= button_tag type: 'submit', class: "btn btn-primary" do %>
                <i class="fas fa-save me-1"></i>Kaydet
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% content_for :head do %>
  <style>
    .form-floating > label {
      padding-left: 1.25rem;
    }
    .form-floating > .form-control {
      padding-left: 1rem;
    }
    .form-floating > .form-control:focus {
      border-color: #86b7fe;
      box-shadow: 0 0 0 0.25rem rgb(13 110 253 / 25%);
    }
    .form-text {
      margin-left: 0.5rem;
      font-size: 0.875rem;
    }
    .card {
      border: none;
      border-radius: 0.5rem;
    }
    .card-header {
      border-radius: 0.5rem 0.5rem 0 0 !important;
    }
    textarea.form-control {
      min-height: 100px;
    }
  </style>
<% end %>
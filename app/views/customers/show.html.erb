<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <i class="fas fa-check-circle me-2"></i><%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="card shadow-sm">
    <div class="card-header bg-light py-3">
      <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <div class="company-avatar me-3">
            <div class="rounded-circle bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
              <%= @customer.customer_name.first.upcase %>
            </div>
          </div>
          <div>
            <h5 class="mb-0"><%= @customer.customer_name %></h5>
            <small class="text-muted">
              <i class="fas fa-clock me-1"></i>Kayıt: <%= @customer.created_at.strftime("%d.%m.%Y") %>
            </small>
          </div>
        </div>
        
        <div class="btn-group">
          <%= link_to edit_customer_path(@customer), class: "btn btn-outline-primary" do %>
            <i class="fas fa-edit me-1"></i>Düzenle
          <% end %>
          
          <%= button_to @customer, 
              method: :delete,
              class: "btn btn-outline-danger",
              form: { data: { turbo_confirm: "Bu müşteriyi silmek istediğinizden emin misiniz?" } } do %>
            <i class="fas fa-trash me-1"></i>Sil
          <% end %>
          
          <%= link_to customers_path, class: "btn btn-outline-secondary" do %>
            <i class="fas fa-arrow-left me-1"></i>Geri
          <% end %>
        </div>
      </div>
    </div>

    <div class="card-body">
      <div class="row g-4">
        <!-- Firma Bilgileri -->
        <div class="col-md-6">
          <div class="card h-100">
            <div class="card-body">
              <h6 class="card-subtitle mb-3 text-muted">
                <i class="fas fa-building me-2"></i>Firma Bilgileri
              </h6>
              
              <dl class="row mb-0">
                <dt class="col-sm-4">Vergi Dairesi</dt>
                <dd class="col-sm-8"><%= @customer.vat_office_name %></dd>
                
                <dt class="col-sm-4">Telefon</dt>
            
                
                <dt class="col-sm-4">Adres</dt>
                <dd class="col-sm-8"><%= @customer.customer_address %></dd>
              </dl>
            </div>
          </div>
        </div>

        <!-- Yetkili Kişi Bilgileri -->
        <div class="col-md-6">
          <div class="card h-100">
            <div class="card-body">
              <h6 class="card-subtitle mb-3 text-muted">
                <i class="fas fa-user me-2"></i>Yetkili Kişi Bilgileri
              </h6>
              
              <dl class="row mb-0">
                <dt class="col-sm-4">İsim</dt>
             
                
                <dt class="col-sm-4">E-posta</dt>
        
                
                <dt class="col-sm-4">Telefon</dt>
      
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :head do %>
  <style>
    .card {
      border: none;
      border-radius: 0.5rem;
    }
    .card-header {
      border-radius: 0.5rem 0.5rem 0 0 !important;
    }
    .company-avatar .rounded-circle {
      transition: all 0.2s ease-in-out;
    }
    .company-avatar .rounded-circle:hover {
      transform: scale(1.1);
    }
    dt {
      font-weight: 500;
      color: #6c757d;
    }
    .btn-group .btn {
      margin: 0 0.125rem;
    }
  </style>
<% end %>
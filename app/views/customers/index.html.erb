<h1 class="mb-4">Müşteri Listesi</h1>

<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="card-title mb-0">Müşteri Listesi</h5>
      <div class="d-flex gap-2">
        <%= link_to 'Yeni Ekle', new_customer_path, class: "btn btn-success" %>
        <%= link_to "Excel", customers_path(format: :xlsx), class: "btn btn-primary" %>
      </div>
    </div>
    <div class="card-body p-0">
      <table class="table table-striped table-hover mb-0">
        <thead class="table-ligth">
          <tr>
            <th scope="col">Müşteri Adı</th>
            <th scope="col">Vergi Dairesi</th>
            <th scope="col">Müşteri Adresi</th>
            <th scope="col">Müşteri Numarası</th>
            <th scope="col">İşlemler</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.customer_name %></td>
              <td><%= customer.vat_office_name %></td>
              <td><%= customer.customer_address %></td>
              <td><%= customer.customer_phone_number %></td>
              <td class="text-center">
                <%= link_to 'Düzenle', edit_customer_path(customer), class: "btn btn-sm btn-outline-warning mx-1" %>
                <%= button_to 'Sil', customer, method: :delete, data: { confirm: 'Bu müşteriyi silmek istediğinize emin misiniz?' }, class: "btn btn-sm btn-outline-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

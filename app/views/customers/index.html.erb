<div class="container-fluid mt-4">
  <div class="card shadow-sm">
    <div class="card-header bg-light py-3">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h5 class="mb-0">
            <i class="fas fa-users me-2"></i>Müşteri Listesi
          </h5>
          <small class="text-muted">Toplam <%= @customers.count %> müşteri</small>
        </div>
        <div class="btn-group">
          <%= link_to new_customer_path, class: "btn btn-sm btn-success" do %>
            <i class="fas fa-plus me-1"></i>Yeni Ekle
          <% end %>
          <%= link_to customers_path(format: :xlsx), class: "btn btn-sm btn-primary" do %>
            <i class="fas fa-file-excel me-1"></i>Excel
          <% end %>
        </div>
      </div>
    </div>

    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th class="ps-3">Müşteri Bilgileri</th>
              <th>İletişim Bilgileri</th>
              <th class="text-end pe-3">İşlemler</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td class="ps-3">
                  <div class="d-flex align-items-center">
                    <div class="customer-avatar me-3">
                      <div class="rounded-circle bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                        <%= customer.customer_name.first.upcase %>
                      </div>
                    </div>
                    <div>
                      <div class="fw-medium"><%= customer.customer_name %></div>
                      <small class="text-muted">
                        <i class="fas fa-building me-1"></i><%= customer.vat_office_name %>
                      </small>
                    </div>
                  </div>
                </td>

                <td>
                  <div class="d-flex flex-column">
                    <small>
                      <i class="fas fa-map-marker-alt me-1 text-muted"></i>
                      <%= truncate(customer.customer_address, length: 50) %>
                    </small>
                    <small>
                      <i class="fas fa-phone me-1 text-muted"></i>
                      <%= customer.customer_phone_number %>
                    </small>
                  </div>
                </td>

                <td class="text-end pe-3">
                  <div class="btn-group btn-group-sm">
                    <%= link_to edit_customer_path(customer), class: "btn btn-outline-primary", title: "Düzenle" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    
                    <%= button_to customer, 
                        method: :delete,
                        class: "btn btn-outline-danger",
                        title: "Sil",
                        data: { 
                          turbo_confirm: 'Bu müşteriyi silmek istediğinize emin misiniz?',
                          turbo_method: :delete
                        } do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% content_for :head do %>
  <style>
    .table > :not(caption) > * > * {
      padding: 1rem 0.5rem;
    }
    .btn-group .btn {
      border-radius: 0.375rem !important;
      margin: 0 0.125rem;
    }
    .table-hover tbody tr:hover {
      background-color: rgba(0, 0, 0, 0.02);
    }
    .customer-avatar .rounded-circle {
      transition: all 0.2s ease-in-out;
    }
    .table tbody tr:hover .customer-avatar .rounded-circle {
      transform: scale(1.1);
    }
    @media (max-width: 768px) {
      .table-responsive {
        border: 0;
      }
    }
  </style>
<% end %>
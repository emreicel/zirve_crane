<h1>Ödeme Yöntemleri</h1>

<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h5 class="card-title">Ödeme Yöntemleri Listesi</h5>
      <%= link_to 'Yeni Ödeme Yöntemi Ekle', new_payment_method_path, class: "btn btn-primary float-end" %>
    </div>
    <div class="card-body">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Ödeme Yöntemi</th>
            <th scope="col">İşlemler</th>
          </tr>
        </thead>
        <tbody>
          <% @payment_methods.each do |payment_method| %>
            <tr>
              <td><%= payment_method.payment_method %></td>
              <td>
                <%= link_to 'Düzenle', edit_payment_method_path(payment_method), class: "btn btn-sm btn-warning" %>
                <%= link_to 'Sil', payment_method, method: :delete, data: { confirm: 'Bu ödeme yöntemini silmek istediğinize emin misiniz?' }, class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

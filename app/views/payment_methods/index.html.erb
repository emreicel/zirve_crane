<div class="container-fluid mt-4">
  <div class="card shadow-sm">
    <div class="card-header bg-light py-3">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h5 class="mb-0">
            <i class="fas fa-money-check-alt me-2"></i>Ödeme Yöntemleri
          </h5>
          <small class="text-muted">Toplam <%= @payment_methods.count %> ödeme yöntemi</small>
        </div>
        <%= link_to new_payment_method_path, class: "btn btn-primary btn-sm" do %>
          <i class="fas fa-plus-circle me-1"></i>Yeni Ödeme Yöntemi
        <% end %>
      </div>
    </div>

    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th class="ps-3">Ödeme Yöntemi</th>
              <th class="text-end pe-3" style="width: 150px">İşlemler</th>
            </tr>
          </thead>
          <tbody>
            <% @payment_methods.each do |payment_method| %>
              <tr>
                <td class="ps-3">
                  <div class="d-flex align-items-center">
                    <%= render_payment_method_icon(payment_method.payment_method) %>
                    <span class="ms-2"><%= payment_method.payment_method %></span>
                  </div>
                </td>
                <td class="text-end pe-3">
                  <div class="btn-group btn-group-sm">
                    <%= link_to edit_payment_method_path(payment_method),
                        class: "btn btn-outline-primary",
                        data: { 
                          bs_toggle: "tooltip",
                          bs_placement: "top"
                        },
                        title: "Düzenle" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    
                    <%= button_to payment_method_path(payment_method),
                        method: :delete,
                        class: "btn btn-outline-danger",
                        form: { 
                          data: { 
                            turbo_confirm: "Bu ödeme yöntemini silmek istediğinize emin misiniz?",
                            bs_toggle: "tooltip",
                            bs_placement: "top"
                          }
                        },
                        title: "Sil" do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% content_for :head do %>
  <style>
    .table > :not(caption) > * > * {
      padding: 1rem 0.5rem;
    }
    .btn-group .btn {
      border-radius: 0.375rem !important;
      margin: 0 0.125rem;
    }
    .table-hover tbody tr:hover {
      background-color: rgba(0, 0, 0, 0.02);
    }
    .payment-method-icon {
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 8px;
      background-color: rgba(var(--bs-primary-rgb), 0.1);
      color: var(--bs-primary);
    }
    .payment-method-icon i {
      font-size: 1rem;
    }
  </style>
<% end %>
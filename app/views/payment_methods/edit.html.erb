<h1>Ödeme Yöntemini Düzenle</h1>

<div class="container mt-4">
  <div class="card">
    <div class="card-body">
      <%= form_with model: @payment_method, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :payment_method, "Ödeme Yöntemi", class: "form-label" %>
          <%= f.text_field :payment_method, class: "form-control" %>
        </div>
        <div class="mt-3">
          <%= f.submit "Güncelle", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

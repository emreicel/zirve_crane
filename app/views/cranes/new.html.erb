<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-header bg-light py-3">
      <div class="d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
          <i class="fas fa-truck-pickup me-2"></i>Yeni Vinç Ekle
        </h5>
        <%= link_to cranes_path, class: "btn btn-sm btn-outline-secondary" do %>
          <i class="fas fa-arrow-left me-1"></i>Geri
        <% end %>
      </div>
    </div>

    <div class="card-body">
      <%= form_with model: @crane, local: true, class: "needs-validation" do |f| %>
        <div class="row g-3">
          <!-- Temel Bilgiler -->
          <div class="col-md-4">
            <div class="form-floating mb-3">
              <%= f.text_field :crane_brand_name, class: "form-control", required: true %>
              <%= f.label :crane_brand_name, "Marka" %>
            </div>
          </div>

          <div class="col-md-4">
            <div class="form-floating mb-3">
              <%= f.text_field :crane_model_name, class: "form-control", required: true %>
              <%= f.label :crane_model_name, "Model" %>
            </div>
          </div>

          <div class="col-md-4">
            <div class="form-floating mb-3">
              <%= f.text_field :crane_chassis_no, class: "form-control", required: true %>
              <%= f.label :crane_chassis_no, "Şase No" %>
            </div>
          </div>

          <!-- Ölçü Bilgileri -->
          <div class="col-12">
            <hr class="text-muted">
            <h6 class="text-muted mb-3"><i class="fas fa-ruler me-2"></i>Ölçü Bilgileri</h6>
          </div>

          <div class="col-md-3">
            <div class="form-floating mb-3">
              <%= f.number_field :crane_boom_length, class: "form-control", min: 0, step: "0.1", required: true %>
              <%= f.label :crane_boom_length, "Bom Uzunluğu (m)" %>
            </div>
          </div>

          <div class="col-md-3">
            <div class="form-floating mb-3">
              <%= f.number_field :crane_height, class: "form-control", min: 0, step: "0.1", required: true %>
              <%= f.label :crane_height, "Vinç Yüksekliği (m)" %>
            </div>
          </div>

          <div class="col-md-3">
            <div class="form-floating mb-3">
              <%= f.number_field :crane_tonnage, class: "form-control", min: 0, step: "0.1", required: true %>
              <%= f.label :crane_tonnage, "Maksimum Tonaj (ton)" %>
            </div>
          </div>

          <div class="col-md-3">
            <div class="form-floating mb-3">
              <%= f.number_field :crane_boom_tonnage, class: "form-control", min: 0, step: "0.1", required: true %>
              <%= f.label :crane_boom_tonnage, "Bom Ucu Tonaj (ton)" %>
            </div>
          </div>

          <!-- Diğer Bilgiler -->
          <div class="col-12">
            <hr class="text-muted">
            <h6 class="text-muted mb-3"><i class="fas fa-info-circle me-2"></i>Diğer Bilgiler</h6>
          </div>

          <div class="col-md-4">
            <div class="form-floating mb-3">
              <%= f.number_field :crane_year, class: "form-control", 
                  min: 1900, max: Time.current.year,
                  required: true %>
              <%= f.label :crane_year, "İmal Yılı" %>
            </div>
          </div>

          <div class="col-md-4">
            <div class="form-floating mb-3">
              <%= f.collection_select :crane_owner_id, @crane_owners, :id, :crane_owner_name,
                  { prompt: "Firma Seçin" },
                  { class: "form-select", required: true } %>
              <%= f.label :crane_company_name, "Kayıtlı Firma" %>
            </div>
          </div>

          <div class="col-md-4 d-flex align-items-center">
            <div class="form-check form-switch">
              <%= f.check_box :available, class: "form-check-input", role: "switch", id: "available-checkbox" %>
              <%= f.label :available, "Uygun mu?", class: "form-check-label ms-2", for: "available-checkbox" %>
            </div>
          </div>

          <!-- Form Butonları -->
          <div class="col-12 mt-4">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <%= link_to cranes_path, class: "btn btn-outline-secondary me-2" do %>
                <i class="fas fa-times me-1"></i>İptal
              <% end %>
              <%= button_tag type: 'submit', class: "btn btn-primary" do %>
                <i class="fas fa-save me-1"></i>Kaydet
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% content_for :head do %>
  <style>
    .form-floating > .form-select {
      padding-top: 1.625rem;
      padding-bottom: 0.625rem;
    }
    .form-switch .form-check-input {
      width: 3em;
      height: 1.5em;
      margin-top: 0;
    }
    .form-check-label {
      font-size: 1.1rem;
    }
  </style>
<% end %>
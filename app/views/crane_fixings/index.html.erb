<div class="container-fluid mt-4">
  <div class="card shadow-sm">
    <div class="card-header bg-light py-3">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h5 class="mb-0">
            <i class="fas fa-link me-2"></i>Vinç Sabitleme Tipleri
          </h5>
          <small class="text-muted">Toplam <%= @crane_fixings.count %> sabitleme tipi</small>
        </div>
        <div class="btn-group">
          <%= link_to new_crane_fixing_path, class: "btn btn-sm btn-success" do %>
            <i class="fas fa-plus me-1"></i>Yeni Ekle
          <% end %>
          <%= link_to crane_fixings_path(format: :xlsx), class: "btn btn-sm btn-primary" do %>
            <i class="fas fa-file-excel me-1"></i>Excel
          <% end %>
        </div>
      </div>
    </div>

    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover table-striped align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th>Sabitleme Tipi</th>
              <th>Oluşturulma Tarihi</th>
              <th>Son Güncelleme</th>
              <th class="text-end pe-3">İşlemler</th>
            </tr>
          </thead>
          <tbody>
            <% @crane_fixings.each do |crane_fixing| %>
              <tr>
                <td>
                  <div class="fw-bold"><%= crane_fixing.crane_fixing %></div>
                </td>
                <td>
                  <small class="text-muted">
                    <i class="fas fa-calendar me-1"></i>
                    <%= crane_fixing.created_at.strftime("%d.%m.%Y") %>
                  </small>
                </td>
                <td>
                  <small class="text-muted">
                    <i class="fas fa-clock me-1"></i>
                    <%= crane_fixing.updated_at.strftime("%d.%m.%Y") %>
                  </small>
                </td>
                <td class="text-end">
                  <div class="btn-group btn-group-sm">
                    <%= link_to edit_crane_fixing_path(crane_fixing), class: "btn btn-outline-primary" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= button_to crane_fixing_path(crane_fixing), method: :delete, 
                        data: { 
                          turbo_confirm: 'Bu sabitleme tipini silmek istediğinize emin misiniz?'
                        }, 
                        class: "btn btn-outline-danger" do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <% if @crane_fixings.empty? %>
    <div class="text-center mt-4">
      <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>Henüz kayıtlı vinç sabitleme tipi bulunmamaktadır.
      </div>
    </div>
  <% end %>
</div>
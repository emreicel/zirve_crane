<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header bg-light">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Profil Ayarları</h5>
            <%= link_to :back, class: "btn btn-sm btn-outline-secondary" do %>
              <i class="fas fa-arrow-left"></i> Geri
            <% end %>
          </div>
        </div>

        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="row g-3">
              <div class="col-12">
                <%= f.label :name, "Ad Soyad", class: "form-label small" %>
                <%= f.text_field :name, class: "form-control form-control-sm" %>
              </div>

              <div class="col-12">
                <%= f.label :email, "E-posta", class: "form-label small" %>
                <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-sm" %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div class="col-12">
                  <div class="alert alert-info py-2 small">
                    Onay bekleyen e-posta: <%= resource.unconfirmed_email %>
                  </div>
                </div>
              <% end %>

              <div class="col-12">
                <hr class="my-2">
                <p class="text-muted small mb-3">Şifre değiştirmek istemiyorsanız aşağıdaki alanları boş bırakın</p>
              </div>

              <div class="col-md-6">
                <%= f.label :password, "Yeni Şifre", class: "form-label small" %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm" %>
              </div>

              <div class="col-md-6">
                <%= f.label :password_confirmation, "Yeni Şifre Tekrar", class: "form-label small" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm" %>
              </div>

              <div class="col-12 mt-3">
                <%= f.label :current_password, "Mevcut Şifre", class: "form-label small text-danger" %>
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form-control-sm" %>
                <div class="form-text small">Değişiklikleri onaylamak için mevcut şifrenizi girmelisiniz</div>
              </div>

              <div class="col-12 mt-4">
                <%= f.submit "Güncelle", class: "btn btn-primary btn-sm w-100" %>
              </div>
            </div>
          <% end %>

          <div class="mt-4 pt-3 border-top">
            <div class="d-flex justify-content-between align-items-center">
              <h6 class="text-danger mb-0">Hesabı Sil</h6>
              <%= button_to registration_path(resource_name), 
                  data: { turbo_confirm: "Bu işlem geri alınamaz. Hesabınızı silmek istediğinizden emin misiniz?" }, 
                  method: :delete, 
                  class: "btn btn-outline-danger btn-sm" do %>
                <i class="fas fa-trash-alt"></i> Hesabı Sil
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="d-flex flex-column align-items-center gap-2 mt-3">
  <%- if controller_name != 'sessions' %>
    <%= link_to new_session_path(resource_name), class: "btn btn-outline-primary btn-sm w-100" do %>
      <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
    <% end %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to new_password_path(resource_name), class: "btn btn-link btn-sm text-decoration-none" do %>
      <i class="fas fa-key me-1"></i>Şifremi Unuttum
    <% end %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to new_confirmation_path(resource_name), class: "btn btn-link btn-sm text-decoration-none" do %>
      <i class="fas fa-envelope me-1"></i>Onay talimatlarını almadınız mı?
    <% end %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to new_unlock_path(resource_name), class: "btn btn-link btn-sm text-decoration-none" do %>
      <i class="fas fa-unlock me-1"></i>Hesap kilidi açma talimatlarını almadınız mı?
    <% end %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <div class="d-flex flex-column gap-2 w-100 mt-2">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to omniauth_authorize_path(resource_name, provider), 
            method: :post, 
            class: "btn btn-outline-secondary btn-sm" do %>
          <i class="fab fa-<%= provider.to_s.downcase %> me-2"></i>
          <%= provider.to_s.titleize %> ile giriş yap
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

<% content_for :head do %>
  <style>
    .btn-link {
      color: #6c757d;
      transition: color 0.2s ease-in-out;
    }
    .btn-link:hover {
      color: #0d6efd;
    }
    .btn-outline-primary, .btn-outline-secondary {
      transition: all 0.2s ease-in-out;
    }
    .btn-sm {
      padding: 0.4rem 1rem;
    }
  </style>
<% end %>
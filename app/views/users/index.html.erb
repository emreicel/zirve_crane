<h1>Kullanıcılar</h1>
<table>
  <thead>
    <tr>
      <th>Ad</th>
      <th>Email</th>
      <th>Rol</th>
      <th>İşlemler</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Düzenle', edit_user_registration_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

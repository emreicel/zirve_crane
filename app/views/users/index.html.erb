<div class="container-fluid mt-4">
  <div class="card shadow-sm">
    <div class="card-header bg-light py-3">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h5 class="mb-0">
            <i class="fas fa-users me-2"></i>Kullanıcı Listesi
          </h5>
          <small class="text-muted">Toplam <%= @users.count %> kullanıcı</small>
        </div>
        <%= link_to new_user_registration_path, class: "btn btn-sm btn-success" do %>
          <i class="fas fa-user-plus me-1"></i>Yeni Kullanıcı
        <% end %>
      </div>
    </div>

    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th class="ps-3">Kullanıcı</th>
              <th>İletişim</th>
              <th>Rol</th>
              <th class="text-end pe-3">İşlemler</th>
            </tr>
          </thead>
          <tbody>
            <% @users.order(:id).each do |user| %>
              <tr>
                <td class="ps-3">
                  <div class="d-flex align-items-center">
                    <div class="user-avatar me-3">
                      <div class="rounded-circle bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                        <%= user.name.first.upcase %>
                      </div>
                    </div>
                    <div>
                      <div class="fw-medium"><%= user.name %></div>
                      <small class="text-muted">
                        <i class="fas fa-clock me-1"></i>Kayıt: <%= user.created_at.strftime("%d.%m.%Y") %>
                      </small>
                    </div>
                  </div>
                </td>

                <td>
                  <div class="d-flex align-items-center">
                    <i class="fas fa-envelope text-muted me-2"></i>
                    <%= user.email %>
                  </div>
                </td>

                <td>
                  <%= render_user_role_badge(user.role.description) %>
                </td>

                <td class="text-end pe-3">
                  <div class="btn-group btn-group-sm">
                    <%= link_to edit_user_registration_path(user), 
                        class: "btn btn-outline-primary",
                        data: { 
                          bs_toggle: "tooltip",
                          bs_placement: "top"
                        },
                        title: "Düzenle" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    
                    <% if current_user.admin? && user != current_user %>
                      <%= button_to user_registration_path(user),
                          method: :delete,
                          class: "btn btn-outline-danger",
                          data: { 
                            turbo_confirm: "Bu kullanıcıyı silmek istediğinizden emin misiniz?",
                            bs_toggle: "tooltip",
                            bs_placement: "top"
                          },
                          title: "Sil" do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% content_for :head do %>
  <style>
    .table > :not(caption) > * > * {
      padding: 1rem 0.5rem;
    }
    .btn-group .btn {
      border-radius: 0.375rem !important;
      margin: 0 0.125rem;
    }
    .table-hover tbody tr:hover {
      background-color: rgba(0, 0, 0, 0.02);
    }
    .user-avatar .rounded-circle {
      transition: all 0.2s ease-in-out;
    }
    .table tbody tr:hover .user-avatar .rounded-circle {
      transform: scale(1.1);
    }
    .badge {
      font-size: 0.85em;
      font-weight: 500;
      padding: 0.5em 0.85em;
    }
    
    .badge i {
      font-size: 0.85em;
    }

    @media (max-width: 768px) {
      .table-responsive {
        border: 0;
      }
    }
  </style>
<% end %>
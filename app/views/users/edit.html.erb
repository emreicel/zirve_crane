<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-header bg-light py-3">
      <h5 class="mb-0">
        <i class="fas fa-user-edit me-2"></i>Kullanıcı Düzenle
      </h5>
    </div>

    <div class="card-body">
      <%= form_with(model: @user, local: true) do |f| %>
        <% if @user.errors.any? %>
          <div class="alert alert-danger">
            <h6 class="alert-heading">Lütfen hataları düzeltin:</h6>
            <ul class="mb-0">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :name, "İsim", class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, "E-posta", class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :role_id, "Rol", class: "form-label" %>
          <%= f.collection_select :role_id, 
                                Role.all, 
                                :id, 
                                :description, 
                                {}, 
                                class: "form-select" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "Yeni Şifre (opsiyonel)", class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>
          <small class="form-text text-muted">Değiştirmek istemiyorsanız boş bırakın</small>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "Yeni Şifre Tekrar", class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>

        <div class="text-end">
          <%= link_to "İptal", users_path, class: "btn btn-light me-2" %>
          <%= f.submit "Güncelle", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>